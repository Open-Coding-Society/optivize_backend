{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Flask Debugger",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py", // Ensure 'app.py' is your Flask entry file
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
                "--no-debugger", // Optional: Prevent Flask from using its own debugger
                "--no-reload"    // Optional: Prevent auto-reload, which can interfere with VSCode's debugger
            ],
            "jinja": true
        }
    ]
}
